{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "fish:build",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"command": "./node_modules/.bin/esbuild \"${file}\" --bundle --platform=browser --format=iife --log-level=error --tree-shaking=true --minify --target=es2020 --legal-comments=none --outfile=\"${fileDirname}/${fileBasenameNoExtension}.min.js\"",
			"presentation": {
				"panel": "shared",
				"group": "fish",
				"reveal": "never",
				"showReuseMessage": false
			}
		},
		{
			"label": "fish:sass:master",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"command": "./node_modules/.bin/sass \"${file}\" \"${fileDirname}/${fileBasenameNoExtension}.min.css\" --load-path=node_modules --style=compressed --no-source-map --quiet",
			"presentation": {
				"panel": "shared",
				"group": "fish",
				"reveal": "never",
				"showReuseMessage": false
			}
		}
	]
}